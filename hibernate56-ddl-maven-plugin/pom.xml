    <prerequisites>
        <maven>3.0.4</maven>
    </prerequisites>

    <inceptionYear>2016</inceptionYear>

    <licenses>
        <license>
            <name>GPLv3 or newer</name>
            <url>http://www.gnu.org/licenses/gpl-3.0.html</url>
